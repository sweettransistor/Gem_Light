#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition

ScreenManager:
    transition: RiseInTransition()
    MainScreen:
    LoadScreen:
    ReturnScreen:

<MainScreen>:
    name: 'GLOWING GEM Controller'
    
    BoxLayout: 
        orientation: 'vertical'    
        Image:
            source: 'logo.png'
            pos_hint: {"center_x":0.5, "center_y":0.5}
        Label:
            text: f'I am the {root.name}!'
            font_size:26
            bold:True
        GridLayout:
            id: container_y
            size_hint_y: None
            orientation: 'tb-lr'
            cols: 2
            row_default_height: root.height*0.15
            height: self.minimum_height

            Button:
                text: 'CONNECT TO GEM'
                font_size:20
                bold:True
                background_color:'00FFCE'
                on_release: root.manager.current = 'LoadScreen'
